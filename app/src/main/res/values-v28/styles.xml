<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="beer_name">
        <item name="android:background">@android:color/white</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="beer_text">
        <item name="android:background">@android:color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="beer_text.card_preview">
        <item name="android:textSize">12px</item>
        <item name="android:lineHeight">18px</item>
    </style>

    <style name="beer_text.size_preview">
        <item name="android:textSize">16px</item>
        <item name="android:lineHeight">24px</item>
    </style>

    <style name="beer_name.preview">
        <item name="android:textSize">18px</item>
        <item name="android:lineHeight">24px</item>
    </style>

    <style name="button">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16px</item>
        <item name="android:lineHeight">24px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="beer_name.detailed_view">
        <item name="android:textSize">22px</item>
        <item name="android:lineHeight">28px</item>
    </style>

    <style name="beer_text.detailed_view">
        <item name="android:textSize">14px</item>
        <item name="android:lineHeight">21px</item>
    </style>

    <style name="beer_text.size_detailed_view">
        <item name="android:textSize">18px</item>
        <item name="android:lineHeight">27px</item>
    </style>
</resources>