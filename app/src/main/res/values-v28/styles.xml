<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="beer_name">
        <item name="android:background">@android:color/white</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="beer_text">
        <item name="android:background">@android:color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="beer_text.card_preview">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">18sp</item>
    </style>

    <style name="beer_text.size_preview">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="beer_name.preview">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    android:textAllCaps="false"

    <style name="button">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="beer_name.detailed_view">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>

    <style name="beer_text.detailed_view">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">21sp</item>
    </style>

    <style name="beer_text.size_detailed_view">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">27sp</item>
    </style>
</resources>