<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/elevation_cardview"
        app:cardCornerRadius="@dimen/radius_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconBeer"
                android:layout_width="@dimen/icon_beer_width"
                android:layout_height="@dimen/icon_beer_height"
                android:layout_marginStart="@dimen/icon_beer_margin_start"
                android:layout_marginTop="@dimen/icon_beer_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ichnusa" />


            <TextView
                android:id="@+id/title"
                style="@style/beer_name"
                android:layout_width="@dimen/beer_title_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/beer_title_margin_start"
                android:text="@string/ichnusa"
                app:layout_constraintStart_toEndOf="@+id/iconBeer"
                app:layout_constraintTop_toTopOf="@+id/iconBeer" />

            <TextView
                android:id="@+id/size"
                style="@style/beer_text.detailed_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/beer_size_margin_top"
                android:text="@string/small_size"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/shortDescription"
                style="@style/beer_text"
                android:layout_width="@dimen/desc_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/desc_margin_top"
                android:layout_marginEnd="@dimen/desc_margin_end"
                android:text="@string/preview_ichnusa"
                android:textSize="@dimen/desc_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/size"
                app:layout_constraintTop_toBottomOf="@+id/size" />

            <Button
                android:id="@+id/button"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top"
                android:layout_marginBottom="@dimen/btn_margin_bottom"
                android:text="@string/go_to_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/shortDescription"
                app:layout_constraintTop_toBottomOf="@+id/shortDescription" />

            <ImageButton
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/icon_margin_start"
                android:layout_marginBottom="@dimen/icon_margin_bottom"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/emptystar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>